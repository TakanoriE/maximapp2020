<div class="user-container">
  <h1 class="resend-unlock-title user-title">アカウント凍結解除メールの再送信</h1>
  <div class="resend-unlock-form user-form clearfix">
      <%= form_for(resource, as: resource_name, url: unlock_path(resource_name), html: { method: :post }) do |f| %>
        <%= render "devise/shared/error_messages", resource: resource, class: "error-messages" %>

        <div class="field">
          <%= f.label :email, "メールアドレス" %><br />
          <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
        </div>

        <div class="actions">
          <%= f.submit "アカウント凍結解除メールの再送信", class: "resend-unlock-btn user-btn" %>
        </div>
      <% end %>

      <%= render "devise/shared/links" %>
  </div>
</div>