<div class="user-container">
  <h1 class="login-title user-title">ログイン</h1>
  <div class="login-form user-form clearfix">
    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="field">
        <%= f.label :login ,"メールアドレスまたはユーザー名" %><br />
        <%= f.text_field :login, autofocus: true %>
      </div>

      <div class="field">
        <%= f.label :username , "パスワード" %><br />
        <%= f.password_field :password, autocomplete: "current-password" %>
      </div>

      <% if devise_mapping.rememberable? %>
        <div class="field-remember">
          <%= f.check_box :remember_me %>
          <%= f.label :remember_me, "ログイン情報を保持", class: "remember-me" %>
        </div>
      <% end %>

      <div class="actions">
        <%= f.submit "ログイン", class: "login-btn user-btn" %>
      </div>
    <% end %>

    <%= render "devise/shared/links" %>
  </div>
</div>
