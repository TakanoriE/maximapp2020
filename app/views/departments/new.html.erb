<h1 class="department-new-title department-title">新規投稿</h1>
<%= form_tag("/departments/create")do%>
    <div class="form">
    <div class="form-body clearfix">
        <% @department.errors.full_messages.each do |message| %>
            <div class="form-error">
            <%= message %>
            </div>
        <% end %>
        <p>カテゴリー名</p>
        <input type="text" name="category" class="department-new-input" value="<%= @department.category%>">
        <input type="submit" value="投稿" class="department-btn">
    </div>
    </div>
<% end%>